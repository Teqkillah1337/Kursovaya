<Window x:Class="ComputerPassport.InventoryNumberDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Ввод инвентарного номера"
        Width="556"
        Height="285"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{DynamicResource MaterialDesignPaper}">

    <Border Margin="20" CornerRadius="8" Background="{DynamicResource MaterialDesignCardBackground}">
        <StackPanel Margin="20">
            <!-- Заголовок -->
            <TextBlock Text="Введите инвентарный номер" 
                       FontSize="16" 
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource PrimaryHueMidBrush}"
                       Margin="0,0,0,15"
                       HorizontalAlignment="Center"/>

            <!-- Поле ввода -->
            <TextBox x:Name="txtInventoryNumber"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     materialDesign:HintAssist.Hint="Инвентарный номер (необязательно)"
                     FontSize="14"
                     Margin="0,0,0,15"
                     Height="51"/>

            <!-- Кнопки -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Очистить" 
                        Style="{StaticResource SecondaryButton}"
                        Click="BtnClear_Click"
                        Margin="0,0,10,0"
                        Height="40"/>
                <Button Content="Отмена" 
                        Style="{StaticResource SecondaryButton}"
                        Click="BtnCancel_Click"
                        Margin="0,0,10,0" 
                        Height="40"/>
                <Button Content="OK" 
                        Style="{StaticResource PrimaryButton}"
                        Click="BtnOK_Click"
                        Margin="0,0,10,0"/>
            </StackPanel>

            <!-- Подсказка -->
            <TextBlock Text="Можно оставить пустым" 
                       FontSize="11" 
                       Foreground="{DynamicResource MaterialDesignBody}"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0"
                       FontStyle="Italic"/>
        </StackPanel>
    </Border>
</Window>