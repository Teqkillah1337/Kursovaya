<Page x:Class="ComputerPassport.AboutPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="О программе"
      Background="{DynamicResource MaterialDesignPaper}">

    <Border CornerRadius="8" Background="{DynamicResource MaterialDesignCardBackground}"  Style="{StaticResource CardStyle}">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="20" Cursor="">
                <!-- Заголовок -->
                <TextBlock Text="ПАСПОРТ КОМПЬЮТЕРА" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="{DynamicResource PrimaryHueMidBrush}"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Версия -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Версия:" 
                               FontWeight="SemiBold" 
                               Width="120"/>
                    <TextBlock Text="1.0"/>
                </StackPanel>

                <!-- Автор -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Автор:" 
                               FontWeight="SemiBold" 
                               Width="120"/>
                    <TextBlock Text="Беляев Данил Игоревич" TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Дата сборки -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Дата сборки:" 
                               FontWeight="SemiBold" 
                               Width="120"/>
                    <TextBlock Text="9.12.2025"/>
                </StackPanel>

                <!-- Контакты -->
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Контакты:" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,5"/>
                    <TextBlock Text="bhpkjdcyvnoufc@mail.ru" TextWrapping="Wrap"/>
                    <TextBlock Text="+89513563340"/>
                </StackPanel>

                <!-- Лицензия -->
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Лицензия:" 
                               FontWeight="SemiBold" 
                               Width="120"/>
                    <TextBlock Text="Freeware (Бесплатное ПО)" TextWrapping="Wrap"/>
                </StackPanel>

                <!-- Описание -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Описание:" 
                               FontWeight="SemiBold" 
                               Margin="0,0,0,5"/>
                    <TextBlock Text="Программа для создания паспортов компьютерной техники и отслеживания изменений конфигурации." 
                               TextWrapping="Wrap" 
                               TextAlignment="Justify"/>
                </StackPanel>

                <!-- Руководство оператора -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="📖 РУКОВОДСТВО ОПЕРАТОРА" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Foreground="{DynamicResource PrimaryHueMidBrush}"
                               Margin="0,0,0,10"/>

                    <StackPanel Margin="15,0,0,0">
                        <!-- Сбор информации -->
                        <TextBlock Text="🔍 Сбор информации:" 
                                   FontWeight="SemiBold" 
                                   Margin="0,5,0,2"/>
                        <TextBlock Text="1. Выберите разделы для сбора (аппаратная конфигурация, ПО и т.д.)" 
                                   TextWrapping="Wrap" 
                                   Margin="0,2,0,2"/>
                        <TextBlock Text="2. Нажмите 'Собрать информацию'" 
                                   TextWrapping="Wrap" 
                                   Margin="0,2,0,5"/>
                        <TextBlock Text="3. Введите инвентарный номер (необязательно)" 
                                   TextWrapping="Wrap" 
                                   Margin="0,2,0,5"/>

                        <!-- Экспорт данных -->
                        <TextBlock Text="📤 Экспорт данных:" 
                                   FontWeight="SemiBold" 
                                   Margin="0,10,0,2"/>
                        <TextBlock Text="1. Выберите формат экспорта (HTML, PDF, JSON)" 
                                   TextWrapping="Wrap" 
                                   Margin="0,2,0,2"/>
                        <TextBlock Text="2. Нажмите 'Экспортировать'" 
                                   TextWrapping="Wrap" 
                                   Margin="0,2,0,2"/>

                        <!-- Сравнение паспортов -->
                        <TextBlock Text="📊 Сравнение паспортов:" 
                                   FontWeight="SemiBold" 
                                   Margin="0,10,0,2"/>
                        <TextBlock Text="1. Соберите текущую информацию" 
                                   TextWrapping="Wrap" 
                                   Margin="0,2,0,2"/>
                        <TextBlock Text="2. Нажмите 'Сравнить с сохранённым'" 
                                   TextWrapping="Wrap" 
                                   Margin="0,2,0,2"/>
                        <TextBlock Text="3. Выберите ранее сохранённый JSON файл" 
                                   TextWrapping="Wrap" 
                                   Margin="0,2,0,5"/>

                        <!-- Форматы файлов -->
                        <TextBlock Text="💾 Форматы файлов:" 
                                   FontWeight="SemiBold" 
                                   Margin="0,10,0,2"/>
                        <TextBlock Text="• HTML - читаемый формат для просмотра в браузере" 
                                   TextWrapping="Wrap" 
                                   Margin="0,2,0,2"/>
                        <TextBlock Text="• PDF - профессиональный формат для печати" 
                                   TextWrapping="Wrap" 
                                   Margin="0,2,0,2"/>
                        <TextBlock Text="• JSON - машинный формат для сравнения" 
                                   TextWrapping="Wrap" 
                                   Margin="0,2,0,5"/>

                        <!-- Советы -->
                        <TextBlock Text="💡 Советы:" 
                                   FontWeight="SemiBold" 
                                   Margin="0,10,0,2"/>
                        <TextBlock Text="• Для регулярного мониторинга сохраняйте JSON файлы" 
                                   TextWrapping="Wrap" 
                                   Margin="0,2,0,2"/>
                        <TextBlock Text="• Используйте сравнение для отслеживания изменений в системе" 
                                   TextWrapping="Wrap" 
                                   Margin="0,2,0,2"/>
                        <TextBlock Text="• Инвентарный номер помогает идентифицировать технику" 
                                   TextWrapping="Wrap" 
                                   Margin="0,2,0,5"/>
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Border>
</Page>