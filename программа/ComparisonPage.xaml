<Page x:Class="ComputerPassport.ComparisonPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Сравнение паспортов компьютера"
      Background="{DynamicResource MaterialDesignPaper}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <Border Grid.Row="0" 
                Background="{DynamicResource PrimaryHueMidBrush}"
                Padding="20,16" 
                CornerRadius="8"
                Margin="0,0,0,16">
            <StackPanel>
                <TextBlock x:Name="txtTitle" 
                           FontWeight="Bold" 
                           FontSize="18" 
                           Foreground="White" 
                           TextAlignment="Left"/>
                <TextBlock x:Name="txtDates" 
                           FontSize="13" 
                           Foreground="White" 
                           TextAlignment="Left" 
                           Margin="0,6,0,0"/>
            </StackPanel>
        </Border>

        <!-- Основное содержимое -->
        <TabControl Grid.Row="1" 
                    Background="Transparent" 
                    BorderThickness="0">

            <TabItem Header="📊 Сводка">
                <Border Style="{StaticResource CardStyle}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel>
                            <TextBlock x:Name="txtSummary" 
                                       FontFamily="Consolas" 
                                       FontSize="11" 
                                       Foreground="{DynamicResource MaterialDesignBody}" 
                                       TextWrapping="Wrap"/>
                            <Button x:Name="btnExportSummary" 
                                    Content="📄 Экспорт сводки" 
                                    Style="{StaticResource PrimaryButton}"
                                    Click="BtnExportSummary_Click" 
                                    Margin="0,12,0,0" 
                                    HorizontalAlignment="Left"
                                    Height="40"/>
                        </StackPanel>
                    </ScrollViewer>
                </Border>
            </TabItem>

            <TabItem Header="🔍 Детали изменений">
                <Border Style="{StaticResource CardStyle}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="spChanges"/>
                    </ScrollViewer>
                </Border>
            </TabItem>

            <TabItem Header="📋 По разделам">
                <Border Style="{StaticResource CardStyle}">
                    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                        <StackPanel x:Name="spBySections"/>
                    </ScrollViewer>
                </Border>
            </TabItem>
        </TabControl>

        <!-- Статус бар -->
        <Border Grid.Row="2" 
                Background="#7B1FA2"
                CornerRadius="6"
                Padding="16,12"
                Margin="0,16,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="txtStatus" 
                           FontWeight="SemiBold" 
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <Button x:Name="btnExportFull" 
                        Content="💾 Экспорт полного отчёта" 
                        Style="{StaticResource PrimaryButton}"
                        Height="40"
                        Click="BtnExportFull_Click" 
                        Grid.Column="1"/>
            </Grid>
        </Border>
    </Grid>
</Page>